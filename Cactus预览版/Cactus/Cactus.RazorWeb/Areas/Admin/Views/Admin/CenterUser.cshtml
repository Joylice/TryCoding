@{
    Layout = null;
    var user=ViewData["LoginUser"] as Cactus.Model.Sys.User;
}
<table class="pure-table pure-table-bordered">
    <tbody>
        <tr>
            <th>#</th>
            <td>@(user.User_Id)</td>
        </tr>
        <tr>
            <th>头像</th>
            <td>
                <img src="@(user.Avatar)" alt="头像" width="100px" height="100px" />
            </td>
        </tr>
        <tr>
            <th>账户名</th>
            <td>@(user.Name)</td>
        </tr>

        <tr>
            <th>昵称</th>
            <td>@(user.NickName)</td>
        </tr>
        <tr>
            <th>手机号</th>
            <td>@(user.Phone)</td>
        </tr>
        <tr>
            <th>QQ号</th>
            <td>@(user.Qq)</td>
        </tr>
        <tr>
            <th>角色名</th>
            <td>@(user.Role.RoleName)</td>
        </tr>
        <tr>
            <th>创建的时间</th>
            <td>@(user.AddTime)</td>
        </tr>
        <tr>
            <th>邮箱</th>
            <td>@(user.Email)</td>
        </tr>
        <tr>
            <th>最近登录IP</th>
            <td>@(user.LastLoginIp)</td>
        </tr>
        <tr>
            <th>最近登录时间</th>
            <td>@(user.LastLoginTime)</td>
        </tr>
    </tbody>
</table>
