@{
    Layout = null;
    var user = ViewData["LoginUser"] as Cactus.Model.Sys.User;
}

<div class="pure-g">
    <a href="javascript:;" onclick="loadContent_Jq('main-content', '/Admin/Sys/CenterUser');" class="pure-link pure-link-black">返回</a>
</div>

<form class="pure-form  pure-form-aligned">
    <fieldset>
        <legend>修改个人资料</legend>
        <div class="pure-control-group">
            <label>昵称</label>
            <div class="pure-u-auto">
                <div class="pure-lable">
                    <input name="NickName" type="text" value="@user.NickName" placeholder="昵称"/>
                </div>
            </div>
        </div>

        <div class="pure-control-group">
            <label>邮箱</label>
            <div class="pure-u-auto">
                <div class="pure-lable">
                    <input name="Email" type="text" value="@user.Email" placeholder="邮箱"/>
                </div>
            </div>
        </div>
        <div class="pure-control-group">
            <label>手机号码</label>
            <div class="pure-u-auto">
                <div class="pure-lable">
                    <input name="Phone" type="text" value="@user.Phone" placeholder="手机号码"/>
                </div>
            </div>
        </div>
        <div class="pure-control-group">
            <label>QQ号</label>
            <div class="pure-u-auto">
                <div class="pure-lable">
                    <input name="Qq" type="text" value="@user.Qq" placeholder="QQ号"/>
                </div>
            </div>
        </div>

        <div class="pure-controls">
            <button type="button" class="pure-button pure-button-primary" name="saveInfo">保存</button>
        </div>
    </fieldset>
</form>

<script type="text/javascript">
    $(function () {

        $('button[name=saveInfo]').bind('click', function () {
            var param = $("#signupForm").serialize();
            $.ajax({
                url: "/AdminLogin/Index",
                type: "post",
                dataType: "json",
                data: param,
                success: function (obj) {
                    if (obj.pass) {
                        loadContent_Jq('main-content', '/Admin/Sys/CenterUser');
                    } else {
                        alert(obj.error)
                    }
                }
            });
        });
    })
</script>

